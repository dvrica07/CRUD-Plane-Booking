@{
    ViewBag.Title = "Flight Booking System - Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/homestyle.css" rel="stylesheet" />
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="display-4 fw-bold">Welcome to Our Flight Booking System</h1>
            <p class="lead">Book your flights with ease, explore destinations, and enjoy a seamless booking experience.</p>
        </div>
    </section>

    <!-- Features Section -->
    <section class="container my-5">
        <h2 class="text-center mb-4 services-text">Our Services</h2>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card feature-card">
                    <img src="/images/airport.jpg" class="card-img-top" alt="Airport Management">
                    <div class="card-body">
                        <h5 class="card-title">Airport Management</h5>
                        <p class="card-text">Manage airports, terminals, and location details efficiently.</p>
                        <a href="@Url.Action("Index", "Airport")" class="btn btn-link">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card feature-card">
                    <img src="/images/flight.jpg" class="card-img-top" alt="Flight Management">
                    <div class="card-body">
                        <h5 class="card-title">Flight Management</h5>
                        <p class="card-text">Schedule flights, check availability, and manage bookings.</p>
                        <a href="@Url.Action("Index", "Flight")" class="btn btn-link">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card feature-card">
                    <img src="/images/passenger.jpg" class="card-img-top" alt="Passenger Management">
                    <div class="card-body">
                        <h5 class="card-title">Passenger Management</h5>
                        <p class="card-text">Manage passenger profiles, bookings, and tickets.</p>
                        <a href="@Url.Action("Index", "Passenger")" class="btn btn-link">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card feature-card">
                    <img src="/images/plane.jpg" class="card-img-top" alt="Plane Management">
                    <div class="card-body">
                        <h5 class="card-title">Plane Management</h5>
                        <p class="card-text">Track plane schedules, availability, and maintenance status.</p>
                        <a href="@Url.Action("Index", "Plane")" class="btn btn-link">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="text-white text-center py-4 footer-section">
        <p>&copy; 2025 Flight Booking System | All Rights Reserved</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
